<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:FlightSimulatorApp.Views"
        mc:Ignorable="d"
        Title="Flight Simulator App" Height="650" Width="1050">

    <Grid RenderTransformOrigin="0.505,0.722" Background="#FF726B6B">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>



        <Viewbox Grid.Column="1" HorizontalAlignment="Center" Height="450"  VerticalAlignment="Center" Width="450" Stretch="Uniform">
            <views:Map Grid.Column="1" Height="450" Width="450" Loaded="Map_Loaded" RenderTransformOrigin="0.5,0.5" Margin="0"/>
        </Viewbox>

        <Viewbox Grid.Column="2" Height="275" Margin="0,0,87,24" VerticalAlignment="Bottom" Width="305" HorizontalAlignment="Right" Stretch="Uniform">
            <views:Joystick Height="600" Width="687" RenderTransformOrigin="0.501,0.495" Loaded="Joystick_Loaded_3"></views:Joystick>
        </Viewbox>

        <Viewbox Grid.Column="2"  HorizontalAlignment="Center" Margin="86,28,66,329" VerticalAlignment="Center" Stretch="Uniform" Width="349" Height="262">
            <views:FlightData Height="657" Width="861"></views:FlightData>
        </Viewbox>

    </Grid>
</Window>
