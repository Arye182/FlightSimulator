<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:FlightSimulatorApp.Views"
        mc:Ignorable="d" 
        Title="Flight Simulator App" Height="900" Width="1600" FontSize="18" Background="#1F1F36">

    <DockPanel>
        <!--   Menu  !-->
        <StackPanel DockPanel.Dock="Top">
            <Menu x:Name="MenuePannel">
                <MenuItem Header="S_tart">
                    <MenuItem Header="Connect To Server"></MenuItem>
                    <MenuItem Header="Disconnect"></MenuItem>
                    <MenuItem Header="Exit"></MenuItem>
                </MenuItem>
                <MenuItem Header="Settings">
                    <MenuItem Header="Port and IP"></MenuItem>
                    <MenuItem Header="Screen Resolution">
                        <MenuItem Header="Screen Resolution"></MenuItem>
                        <MenuItem Header="800 × 600"></MenuItem>
                        <MenuItem Header="Screen Resolution"></MenuItem>
                        <MenuItem Header="1280 × 720"></MenuItem>
                        <MenuItem Header="1920 × 1080"></MenuItem>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="How To Play?"></MenuItem>
                    <MenuItem Header="About"></MenuItem>
                </MenuItem>

            </Menu>
        </StackPanel>
        <!--   Bottom Status Bar  !-->
        <views:StatusBar x:Name="StatusBar" DockPanel.Dock="Bottom"></views:StatusBar>
        <!--   App Elements (Gui)  !-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="13*"/>
            </Grid.RowDefinitions>
            <!--   Map !-->
            <Viewbox Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Stretch="Uniform" Margin="20,20,20,20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <views:Map/>
            </Viewbox>
            <!--  Joystick  !-->
            <Viewbox Grid.Column="2" Grid.Row="1"  Stretch="Uniform" Margin="20,20,20,20" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <views:MyJoystick/>
            </Viewbox>
            <!--   Data  !-->
            <Viewbox Grid.Column="2" Grid.Row="0" Stretch="Uniform" Margin="20,20,20,20" VerticalAlignment="Top" HorizontalAlignment="Center">
                <views:FlightDashBoard/>
            </Viewbox>
        </Grid>
    </DockPanel>
</Window>